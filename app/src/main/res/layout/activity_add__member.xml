<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ADD_MEMBER"
    android:background="@drawable/bglogin2">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEAM LIST"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/name"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_round"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="77dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/position"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_round"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="58dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />
            <EditText
                android:id="@+id/year"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="82dp"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/edit_round"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branch"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/branch"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/edit_round"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Joined"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/datejoined"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/edit_round"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Projects"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"

                />
            <EditText
                android:id="@+id/projects"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/edit_round"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/button_add_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonbackg"
            android:text="Add Member"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textColor="#ffff"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

    </LinearLayout>

</LinearLayout>